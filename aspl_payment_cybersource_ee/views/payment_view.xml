<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="aspl_acquirer_form_cybersouce" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'cybersource')]}">
                    <field name="cybersource_merchant_id" groups="base.group_user"  />
                    <field name="cybersource_key" groups="base.group_user"  password="True"/>
                    <field name="secret_key" groups="base.group_user"  password="True" attrs="{'required': [('payment_flow','=', 'form'),('provider', '=', 'cybersource')]}"/>
                    <field name="profile_id" groups="base.group_user" password="True" attrs="{'required': [('payment_flow','=', 'form'),('provider', '=', 'cybersource')]}"/>
                    <field name="access_key" groups="base.group_user" password="True" attrs="{'required': [('payment_flow','=', 'form'),('provider', '=', 'cybersource')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
