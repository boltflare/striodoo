<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>

		<!-- model.name form view -->
		<record id="partner_budget_wizard" model="ir.ui.view">
			<field name="name">partner.budget.wizard</field>
			<field name="model">partner.budget.wizard</field>
			<field name="arch" type="xml">
				<form string="">
					<group>
						<field name="budget_year" string="Budget Reference"/>
					</group>
					<footer>
						<button name="action_update_budget" string="Update" type="object" class="oe_highlight"/>
						<button string="Cancel" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<act_window id="partner_budget_wizard_action"
			name="Update Budget Reference"
			src_model="res.partner"
			res_model="partner.budget.wizard"
			view_type="form" 
			view_mode="form"
			key2="client_action_multi"
			target="new"
			groups="base.group_partner_manager"
			/>


	</data>
</odoo> 