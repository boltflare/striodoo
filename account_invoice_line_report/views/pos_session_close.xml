<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data >
		<!-- model.name inherit form view -->
		<record id="pos_close_session_view" model="ir.ui.view">
			<field name="name">pos.close.session.view</field>
			<field name="model">pos.session</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='cash_register_balance_start']" position="replace">
					<field name="cash_register_balance_start" readonly="1" string="Opening Balance" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" groups="account.group_account_user"/>
				</xpath>
				<xpath expr="//field[@name='cash_register_total_entry_encoding']" position="replace">
					<field name="cash_register_total_entry_encoding" nolabel="1" attrs="{'invisible' : [('state', '=', 'opening_control')]}" class="oe_bold oe_pos_total" widget="monetary" options="{'currency_field': 'currency_id'}" groups="account.group_account_user"/>
				</xpath>
				<xpath expr="//field[@name='cash_register_balance_end']" position="replace">
					<field name="cash_register_balance_end" nolabel="1" attrs="{'invisible' : [('state', '=', 'opening_control')]}" class="oe_bold oe_pos_total" widget="monetary" options="{'currency_field': 'currency_id'}" groups="account.group_account_user"/>
				</xpath>
				<xpath expr="//field[@name='cash_register_balance_end_real']" position="replace">
					<field name="cash_register_balance_end_real" string="Real Closing Balance" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" groups="account.group_account_user"/>
				</xpath>
				<xpath expr="//group/field[@name='cash_register_difference']" position="replace">
					<field name="cash_register_difference" class="oe_subtotal_footer_separator oe_right oe_pos_total oe_pos_difference" widget="monetary" options="{'currency_field': 'currency_id'}" groups="account.group_account_user"/>
				</xpath>
				<xpath expr="//field[@name='statement_ids']" position="replace">
					<field name="statement_ids" attrs="{'invisible' : [('state', '=', 'opening_control')]}" groups="account.group_account_user"/>
				</xpath>
				
			</field>
		</record>
		
	</data>
</odoo>