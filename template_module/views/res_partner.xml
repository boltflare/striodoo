<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		
		<!-- model.name inherit form view -->
		<record id="res_partner_inherit2" model="ir.ui.view">
			<field name="name">res.partner.inherit2</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="after">
					<field name="login" invisible="1"/>
					<field name="visit_category" attrs="{'invisible':[('visit_category','=',False)], 'readonly': [('login', '=', False)]}"/>
				</xpath>
			</field>
		</record>
		
	</data>
</odoo>