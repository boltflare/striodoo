<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_account_journal" model="ir.ui.view">
        <field name="name">account.journal.view</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='journal_entries']/group/group/field[@name='default_credit_account_id']" position="after">
                <field name="analytic_account_id" attrs="{'invisible': [('type', '!=', 'sale')]}" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>        
    </record>    
</odoo>